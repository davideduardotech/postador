                      <p class="text-sm font-semibold mb-8">Nenhum encontrado</p>
                    <% } %>
                  </div>

                  <!-- INSTAGRAM -->
                  <div id="select-instagram" class="min-w-0 flex-auto scroll-py-4 overflow-y-auto px-6 mt-10 hidden">
                    <% if (user.accountsIg.length > 0) { %>
                      <div class="flex items-center justify-between mb-2">
                        <h2 class="text-lg font-semibold">Contas do Instagram:</h2>
                        
                        <% if (user.isAdmin || plan.selectAll) { %>
                          <button id="select-all-instagram" onclick="selectAll('<%= JSON.stringify(user.accountsIg) %>', 'instagram')" class="rounded-full font-semibold text-xs py-1 px-1.5 text-purple badge-purple border border-purple">Selecionar todas</button>
                          <button id="unselect-all-instagram" onclick="unselectAll('<%= JSON.stringify(user.accountsIg) %>', 'instagram')" class="rounded-full font-semibold text-xs py-1 px-1.5 text-red-700 bg-red-100 border border-red-700 hidden">Desmarcar</button>
                        <% } %>
