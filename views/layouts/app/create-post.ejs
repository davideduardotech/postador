<%- include('../../partials/head', {title: "Criar nova publicação" }) %>

<body class="bg-gray-100">
  <%- include('../../partials/app/sidebar') %>

  <div class="xl:ml-64 pb-14">
    <%- include('../../partials/app/nav', {user: user, title: "Nova publicação"}) %>

    <main class="px-10 py-3 fade-in">
      <div class="hidden relative z-10 fade-in" id="popup-preview" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto p-4 sm:p-6 md:p-20 mt-20">
          <div class="mx-auto max-w-lg transform divide-y divide-gray-200 overflow-hidden rounded-xl bg-white shadow-2xl ring-1 ring-black ring-opacity-5 transition-all">
            <div class="flex justify-between py-3 px-6">
              <h2 class="text-purple font-semibold text-lg">Pré-visualizar</h2>
              <button onclick="closePreview()">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M14.3075 11.7231L20.3075 5.67693C20.5844 5.4 20.5844 4.98462 20.3075 4.7077L19.3844 3.73847C19.1075 3.46154 18.6921 3.46154 18.4151 3.73847L12.369 9.78462C12.1844 9.96923 11.9075 9.96923 11.7228 9.78462L5.67668 3.69231C5.39976 3.41539 4.98438 3.41539 4.70745 3.69231L3.73822 4.66154C3.4613 4.93847 3.4613 5.35385 3.73822 5.63077L9.78438 11.6769C9.96899 11.8615 9.96899 12.1385 9.78438 12.3231L3.69207 18.4154C3.41514 18.6923 3.41514 19.1077 3.69207 19.3846L4.6613 20.3538C4.93822 20.6308 5.35361 20.6308 5.63053 20.3538L11.6767 14.3077C11.8613 14.1231 12.1382 14.1231 12.3228 14.3077L18.369 20.3538C18.6459 20.6308 19.0613 20.6308 19.3382 20.3538L20.3075 19.3846C20.5844 19.1077 20.5844 18.6923 20.3075 18.4154L14.3075 12.3692C14.1228 12.1846 14.1228 11.9077 14.3075 11.7231Z"
                    fill="#752A7A" />
                </svg>
              </button>
            </div>

            <div class="flex flex-col divide-y divide-gray-200">
              <div id="img-preview-area" class="min-w-0 hidden flex-auto scroll-py-4 overflow-y-auto px-6 py-4">
                <div class="flex flex-col mb-2">
                  <h2 class="text-lg font-semibold text-purple">Imagem selecionada:</h2>
                  <img id="img-preview-src" class="w-60 mt-2 rounded-lg">
                </div>
              </div>

              <div id="link-preview-area" class="min-w-0 hidden flex-auto scroll-py-4 overflow-y-auto px-6 py-4">
                <div class="flex flex-col mb-2 p-3 bg-gray-200 rounded-lg border-gray">
                  <h2 class="text-sm font-semibold text-gray-800">Link importado:</h2>
                  <p id="link-preview-content" class="text-md font-medium"></p>
                </div>
              </div>

              <div class="min-w-0 flex-auto scroll-py-4 overflow-y-auto px-6 py-4">
                <div class="flex mb-2">
                  <h2 class="text-lg font-semibold text-purple">Conteúdo da publicação:</h2>
                </div>

                <p id="content-preview" class="text-gray-700 text-md font-medium"></p>
              </div>

              <div class="min-w-0 flex-auto scroll-py-4 overflow-y-auto px-6 py-4">
                <div class="flex mb-2">
                  <h2 class="text-lg font-bold text-purple">Agendar publicação:</h2>
                </div>

                <div class="flex mt-2">
                  <div class="flex items-center">
                    <input name="schedule" id="schedule-true" value="yes" tabindex="1" onclick="openSchedule()"
                      type="radio" checked class="h-4 w-4 border-gray-300 text-purple">
                    <label for="schedule-true"
                      class="ml-3 block text-sm font-medium leading-6 text-gray-900">Agendar</label>
                  </div>

                  <div class="flex items-center ml-6">
                    <input name="schedule" id="schedule-false" value="no" tabindex="2" onclick="closeSchedule()"
                      type="radio" checked class="h-4 w-4 border-gray-300 text-purple">
                    <label for="schedule-false"
                      class="ml-3 block text-sm font-medium leading-6 text-gray-900">Publicar agora</label>
                  </div>
                </div>

                <div id="schedule" class="hidden mt-2 -space-y-px rounded-md bg-white shadow-sm">
                  <div class="flex -space-x-px">
                    <div class="w-1/2 min-w-0 flex-1">
                      <input type="date" id="day"
                        class="relative block w-full rounded-none rounded-l-lg border-2 border-purple px-2 bg-transparent py-1 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>

                    <div class="min-w-0 flex-1">
                      <input type="time" id="hour"
                        class="relative block w-full rounded-none rounded-r-lg border-2 border-purple px-2 bg-transparent py-1 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                  </div>
                </div>
              </div>

              <div class="px-6 py-4">
                <h2 class="text-lg font-semibold text-purple">Intervalo de publicações: (Segundos)</h2>
                <input type="number" id="interval"
                  class="relative block w-full rounded-lg border-2 border-purple px-2 bg-transparent py-1 text-gray-900 text-sm leading-6 mt-1"
                  placeholder="60">
              </div>
            </div>

            <div class="pb-3 px-6">
              <button onclick="savePost()"
                class="w-full py-2.5 bg-purple text-white text-sm rounded-lg mt-4">Confirmar</button>
            </div>
          </div>
        </div>
      </div>

      <div class="hidden relative z-10 fade-in" id="popup-select" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-25 transition-opacity"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto p-4 sm:p-6 md:p-20 mt-20">
