                  <button id="button-select-instagram" onclick="openSelect('select-instagram')" class="rounded-full font-semibold text-sm py-0.5 text-purple">Instagram</button>
                  <button id="button-select-sets" onclick="openSelect('select-sets')" class="rounded-full font-semibold text-sm py-0.5 text-purple">Conjuntos</button>
