<%- include('../../../partials/head', {title: "Métricas" }) %>

<body class="bg-gray-100">
  <%- include('../../../partials/app/sidebar') %>

  <div class="xl:ml-64 pb-14">
    <%- include('../../../partials/app/nav', {user: user, title: "Métricas"}) %>

    <main class="px-6 py-4 fade-in">
      <div class="mx-auto py-2 sm:px-2">
        <div class="flex flex-wrap flex-row">
          <div class="flex-shrink max-w-full px-4 w-full">   
            <h2 class="text-xl fire-sans font-semibold text-gray-900">Métricas da plataforma</h2>
          </div>
        </div>

        <div class="flex flex-wrap flex-row mt-5">
          <div class="flex-shrink max-w-full w-full">
            <div class="flex flex-wrap flex-row">
              <!-- target widget -->
              <div class="flex-shrink max-w-full px-4 w-full sm:w-1/2 lg:w-1/4 mb-6">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg h-full p-6 relative overflow-hidden">
                  <h3 class="text-base font-bold mb-2">Vendas</h3>
                  <h2 class="text-3xl font-bold mb-4" id="quantity-finances"></h2>
                  <!-- target -->
                  <div class="flex flex-row w-full">
                    <div class="flex items-center" title="Target">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mr-2 bi bi-calendar-check text-purple" viewBox="0 0 16 16">
                        <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"></path>
